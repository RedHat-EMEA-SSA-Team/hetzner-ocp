# {{ ansible_managed }}
#cloud-config

users:
  - name: cloud-user
    ssh-authorized-keys:
      - {{ lookup('file', '/home/cloud-user/.ssh/id_rsa.pub') }}
    sudo: ['ALL=(ALL) NOPASSWD:ALL']

chpasswd:
  list: |
     root: {{default_password}}
     cloud-user: {{default_password}}
  expire: False

timezone: Europe/Helsinki
